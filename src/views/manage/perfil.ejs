<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Perfil</title>
  <link rel="stylesheet" href="/css/managePerfil.css">
</head>

<body>
  <%- include('../navbar', LoginData) %>
  
  <div class="container my-4">
      <h1>Perfil de Usuario <%= LoginData.accountname %> </h1>

    <form action="" method="post">
      <div class="row">
        <div class="col-md-6 p-3" style="border: 1px solid red;">
          <div class="col-md-12" style="border: 1px solid rgb(0, 255, 187);">
            <h1>Profile Image</h1>
            <img class="profile_img" src="/images/<%= LoginData.profile_pic_dir.slice(1, LoginData.profile_pic_dir.length) %>">
        </div>
        <input type="file">
        </div>

        <div class="col-md-6 p-3" style="border: 1px solid green;">
            <div class="col-md-12">
                <h1>Nickname</h1>
                <input type="text" name="nickname" value="<%= LoginData.nickname %>">
              </div>
              <div class="col-md-12">
                <h1>Description / Bio</h1>
                <textarea name="info" id="" cols="40" rows="5"></textarea>
              </div>
              <div class="col-md-12">
                <h1>Gender</h1>
                <fieldset>
                  <label>
                    <input type="radio" name="male" value="male"> Male
                  </label>
                  <label>
                    <input type="radio" name="female" value="female"> Female
                  </label>
                  <label>
                    <input type="radio" name="other" value="other"> Other
                  </label>
                </fieldset>
              </div>
              <div class="col-md-12">
                <h1>Country</h1>
                <input type="text" name="country" value="<%= LoginData.country %>">
              </div>
              <!-- <div class="col-md-12">
                <h1>Birthdate</h1>
                <input type="date" name="birthdate" value="<%= LoginData.birthdate %>">
              </div> -->
            </div>
            <div class="row my-3 p-3" style="border: 1px solid orange;">
              <h1>Edit Credentials</h1>
              <div class="col-md-12" style="border: 1px solid purple;">
                <label class="mx-3" for="">Email
                  <input type="text" name="email" value="<%= LoginData.email %> " readonly>
                </label>
                <label class="mx-3" for="">Password
                  <input type="text" name="password" value="**">
                </label>
                <input type="submit" class="btn btn-primary" value="edit" 2>
              </div>
            </div>
        </div>


    </form>

  </div>





  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>

</html>