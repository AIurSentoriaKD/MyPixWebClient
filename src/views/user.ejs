<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= AuthorData.nickname %> - MyPix</title>
  <link rel="stylesheet" href="/css/userStyle.css">

  <!-- dios mio lo que tuve que pasar para que esto sirva -->
  <style>
    :root {
      --background-image: url(<%= AuthorData.profile_portrait_dir %>);
    }
  </style>
</head>

<body>
  <%- include('navbar', LoginData) %>
  <div class="author__header">
    <div class="header__fill" style="background-image: var(--background-image);">
      <div class="author__line">
        <div class="author__picname">
          <img src="<%='/images/'+AuthorData.profile_pic_dir.slice(1,AuthorData.profile_pic_dir.length)%>" alt="" style="width: 90px;">
          <h3><%= AuthorData.nickname %> </h3>
        </div>
        <div class="author__inline">
          <h4>Views</h4>
          <h4>Ilustraciones</h4>
          <h4>Page views</h4>
        </div>
      </div>
    </div>
  </div>

  <div class="author__nav">
    <nav>
      <ul class="nav__links__auth">
        <li><a onclick="openNav(event, 'Home')">Home</a></li>
        <li><a onclick="openNav(event, 'Ilustraciones')" >Ilustraciones</a></li>
        <li><a onclick="openNav(event, 'Albumes')">Albumes</a></li>
        <li><a onclick="openNav(event, 'Publicaciones')">Publicaciónes</a></li>
        <li><a onclick="openNav(event, 'Comisiones')">Comisiones</a></li>
        <li><a onclick="openNav(event, 'Request')">Requests</a></li>
      </ul>
    </nav>

    <% if (bool_info.match) { %>
    <div class="lift_left">
      <a href="/manage/perfil">Editar</a>
    </div>
    <% } else { %>
    <div class="lift_left"></div>
    <% if (bool_info.comm_bool) {%> <a href="">Comisión</a> <%} %>
    <% if (bool_info.req_bool) {%> <a href="">Request</a><%} %>
  </div>
  <% } %>

  </div>

  <div id="Home" class="tabcontent" onload="myFunction()">
    <div class="home_recents_container">
      <div class="img_sh_title">
        <hr class="hr_left">
        <label>ILUSTRACIONES RECIENTES</label>
        <hr class="hr_right">
      </div>
      <div class="container" id="Home" onload="myFunction()">
        <% if (AuthorIllusts) { %>
        <% if (bool_info.has_only_one_il) { %>
        <div class="image">
          <a class="card__a" href="/illusts/<%= AuthorIllusts.id %>" style="width: 200px; height: 200px;">
            <img class="image__img" src="/images<%= AuthorIllusts.thumb_dir.split(".")[1] %>.jpg">
            <input type="text" autofocus>
            <div class="image__overlay">
              <div class="image__title">
                <% if (AuthorIllusts.title.length > 5 ) { %>
                <%= AuthorIllusts.title.slice(0, 5) %>...
                <% } else { %>
                <%= AuthorIllusts.title %>
                <% } %>
              </div>
            </div>
          </a>
        </div>
        <% } else { %>
        <% for( let i = 0; i < AuthorIllusts.length; i++ ) { %>
        <div class="image">
          <a class="card__a" href="/illusts/<%= AuthorIllusts[i].id %>" style="width: 200px; height: 200px;">
            <img class="image__img" src="/images<%= AuthorIllusts[i].thumb_dir.split(".")[1] %>.jpg">
            <div class="image__overlay">
              <div class="image__title">
                <% if (AuthorIllusts[i].title.length > 5 ) { %>
                <%= AuthorIllusts[i].title.slice(0, 5) %>...
                <% } else { %>
                <%= AuthorIllusts[i].title %>
                <% } %>
              </div>
            </div>
          </a>
        </div>
        <% } %>
        <% } %>
        <% } else { %>
        <div class="image">
          <label for="">AÚN NO HA PUBLICADO NADA :p</label>
        </div>
        <% } %>
      </div>
    </div>
    <div class="ile_container">
      <div class="ile_left">
        <div class="img_sh_title">
          <hr class="hr_left">
          <label>ME GUSTA</label>
          <hr class="hr_right">
        </div>
      </div>
      <div class="ile_right">
        <div class="img_sh_title">
          <hr class="hr_left">
          <label>INFORMACIÓN</label>
          <hr class="hr_right">
        </div>
      </div>
    </div>
  </div>

  <div id="Ilustraciones" class="tabcontent" autofocus>
    <div class="illusts_container">
      <div class="img_sh_title">
        <hr class="hr_left">
        <label>ILUSTRACIONES</label>
        <hr class="hr_right">
      </div>
    </div>
  </div>

  <div id="Albumes" class="tabcontent">
    <div class="albums_container">
      <div class="img_sh_title">
        <hr class="hr_left">
        <label>ALBUMES</label>
        <hr class="hr_right">
      </div>
      <div class="album__thumb__container">
        <% if(bool_info.single_album ) {%>
        <p><%= albums_info.album_id %> </p>
        <% if (has_illusts[0]) { %>
        <img src="<%='/images/'+albums_info.thumb.slice(1,albums_info.thumb.length)%>" />
        <% } %>
        <% }else{ %>
        <% for( let i = 0; i < albums_info.length; i++ ) { %>
        <p><%= albums_info[i].album_id%> </p>
        <% if (has_illusts[0]) { %>
        <img src="<%='/images/'+albums_info[i].thumb.slice(1,albums_info[i].thumb.length)%>" />
        <% } %>
        <% } %>
        <% } %>
      </div>
      <div class="img_sh_title">
        <hr class="hr_left">
        <label>COLECCIÓN</label>
        <hr class="hr_right">
      </div>
      <div class="container">

      </div>
    </div>

  </div>

  <div id="Publicaciones" class="tabcontent">
    <div class="author_posts_container">
      <div class="input__container">
        <input type="text" placeholder="test">
      </div>
      <div class="posts_main">
        <div class="img_sh_title">
          <hr class="hr_left">
          <label>POSTS</label>
          <hr class="hr_right">
        </div>
        <div class="posts_contai">

        </div>
      </div>
    </div>
  </div>

  <div id="Comisiones" class="tabcontent">
    <div class="comms_container">
      <div class="img_sh_title">
        <hr class="hr_left">
        <label>COMISIONES</label>
        <hr class="hr_right">
      </div>
      <div class="container">
        <!--el for de las comisiones-->
      </div>
    </div>
  </div>

  <div id="Request" class="tabcontent">
    <div class="request_container">
      <div class="img_sh_title">
        <hr class="hr_left">
        <label>REQUESTS</label>
        <hr class="hr_right">
      </div>
      <div class="container">
        <!--el for de las requests-->
      </div>
    </div>
  </div>

  <script src="/js/tabPane.js"></script>
</body>

</html>